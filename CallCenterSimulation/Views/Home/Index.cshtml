@{
    ViewData["Title"] = "BUÜ Çağrı Merkezi";
}

<!-- Modern ve sade slider başlangıcı -->
<div class="container mt-4 mb-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div id="buuSlider" class="position-relative rounded-4 overflow-hidden shadow-sm" style="height: 260px; background: #f8fafc;">
                <img src="/img/buu1.jpg" class="slider-img active" style="object-fit:cover; width:100%; height:260px; transition:opacity 0.5s;" alt="Bursa Uludağ Üniversitesi Giriş Kapısı" />
                <img src="/img/buu2.jpg" class="slider-img" style="object-fit:cover; width:100%; height:260px; position:absolute; left:0; top:0; opacity:0; transition:opacity 0.5s;" alt="Bursa Uludağ Üniversitesi Kampüs" />
                <img src="/img/buu3.jpg" class="slider-img" style="object-fit:cover; width:100%; height:260px; position:absolute; left:0; top:0; opacity:0; transition:opacity 0.5s;" alt="Bursa Uludağ Üniversitesi Genel" />
                <button id="sliderNext" type="button" class="btn btn-light position-absolute end-0 bottom-0 m-3 rounded-circle shadow" style="width:44px; height:44px; font-size:1.5rem; opacity:0.85;">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modern ve sade slider bitişi -->

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary mb-3">BUÜ Çağrı Merkezi</h1>
                <p class="lead text-secondary">Bursa Uludağ Üniversitesi öğrenci ve personel destek sistemine hoş geldiniz. Lütfen işlem yapmak istediğiniz rolü seçin.</p>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body p-4 text-center">
                            <div class="icon-wrapper mb-4">
                                <i class="fas fa-user-graduate fa-3x text-primary"></i>
                            </div>
                            <h3 class="card-title h4 mb-3">Öğrenci İşlemleri</h3>
                            <p class="card-text text-secondary mb-4">Akademik, idari veya teknik konularda destek almak için yeni bir talep oluşturun.</p>
                            <a href="@Url.Action("Index", "Customer")" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-arrow-right me-2"></i>Talep Oluştur
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body p-4 text-center">
                            <div class="icon-wrapper mb-4">
                                <i class="fas fa-user-tie fa-3x text-secondary"></i>
                            </div>
                            <h3 class="card-title h4 mb-3">Personel İşlemleri</h3>
                            <p class="card-text text-secondary mb-4">Personel girişi yaparak gelen talepleri yönetmek ve destek sağlamak için tıklayın.</p>
                            <a href="@Url.Action("Login", "Representative")" class="btn btn-secondary btn-lg w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Personel Girişi
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h4 class="mb-2">7/24 Destek Hizmeti</h4>
                                    <p class="text-secondary mb-md-0">Sorularınız için çağrı merkezimizle iletişime geçin.</p>
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <a href="tel:+902242940000" class="btn btn-outline-primary">
                                        <i class="fas fa-phone-alt me-2"></i>0 (224) 294 00 00
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
