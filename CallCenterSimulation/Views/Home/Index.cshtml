@{
    ViewData["Title"] = "Müşteri ve Temsilci Seçim Sayfası";
}

<div class="container mt-5">
    <div class="card shadow-lg p-5 text-center" style="background-color: #F8FAFC; border-radius: 20px;">
        <h2 class="mb-3 text-primary">Hoşgeldiniz!</h2>
        <p class="mb-4 fs-5 text-secondary">Lütfen işlem yapmak istediğiniz rolü seçin:</p>

        <div class="d-flex flex-column flex-md-row justify-content-center gap-4">
            <a href="@Url.Action("Index", "Customer")"
               class="btn btn-success btn-lg px-5 py-3 shadow-sm">
                <i class="fas fa-user-plus me-2"></i> Talep Oluştur
            </a>

            <a href="@Url.Action("Login", "Representative")"
               class="btn btn-warning btn-lg px-5 py-3 shadow-sm">
                <i class="fas fa-user-tie me-2"></i> Temsilci
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #E3F2FD;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: 600;
    }

    .btn {
        border-radius: 15px;
        transition: transform 0.2s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .fs-5 {
        font-size: 1.25rem;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
