@model IEnumerable<CallCenterSimulation.Models.CustomerFeedback>

@{
    ViewData["Title"] = "Geri Bildirimler";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">💬 Müşteri Geri Bildirimleri</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <strong>Henüz geri bildirim yapılmamış.</strong>
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var feedback in Model)
            {
                <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <strong>@feedback.Ad</strong>
                        <span class="badge bg-info">Puan: @feedback.Puan</span>
                    </div>
                    <p class="mb-0 mt-2">@feedback.GeriBildirim</p>
                </div>
            }
        </div>
    }

    <div class="text-center mt-4">
        <a href="/Representative/Dashboard" class="btn btn-secondary">Panele Dön</a>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
            border-left: 4px solid #007bff;
        }
        .card:hover {
            transform: translateY(-2px);
        }
        .badge {
            font-weight: 500;
        }
    </style>
}
