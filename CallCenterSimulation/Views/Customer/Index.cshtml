@{
    ViewData["Title"] = "Müşteri Talep Formu";
    var hata = TempData["Hata"]?.ToString();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg p-5 border-0 rounded-4">
                <div class="text-center mb-4">
                    <div class="icon-wrapper mb-3 mx-auto">
                        <i class="fas fa-file-signature fa-3x text-primary"></i>
                    </div>
                    <h2 class="fw-bold text-primary mb-2">Müşteri Talep Formu</h2>
                    <p class="text-secondary mb-0">Talebinizi iletmek için aşağıdaki formu doldurun.</p>
                </div>
                @if (!string.IsNullOrEmpty(hata))
                {
                    <div class="alert alert-danger text-center">@hata</div>
                }
                <form asp-controller="Customer" asp-action="Create" method="post">
                    <div class="form-group mb-4">
                        <label for="Ad" class="form-label text-primary fw-semibold">Adınız</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="fas fa-user"></i></span>
                            <input type="text" name="Ad" class="form-control border-start-0" required placeholder="Adınızı girin" />
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <label for="Talep" class="form-label text-primary fw-semibold">Talebiniz</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="fas fa-comment-dots"></i></span>
                            <input type="text" name="Talep" class="form-control border-start-0" required placeholder="Talebinizi yazın..." />
                        </div>
                    </div>
                    <div class="form-group text-center mb-2">
                        <button type="submit" class="btn btn-primary w-100 py-3 fw-bold fs-5">
                            <i class="fas fa-paper-plane me-2"></i>Talep Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
