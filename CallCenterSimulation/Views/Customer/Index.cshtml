@{
    ViewData["Title"] = "Müşteri Talep Formu";
    var hata = TempData["Hata"]?.ToString();
}

<div class="container mt-5">
    <div class="card shadow-lg p-5">
        <h2 class="text-center text-primary mb-4">Müşteri Talep Formu</h2>

        @if (!string.IsNullOrEmpty(hata))
        {
            <div class="alert alert-danger text-center">@hata</div>
        }

        <form asp-controller="Customer" asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label for="Ad" class="text-info">Adınız:</label>
                <input type="text" name="Ad" class="form-control" required placeholder="Adınızı girin" />
            </div>

            <div class="form-group mb-3">
                <label for="Talep" class="text-info">Talebiniz:</label>
                <input type="text" name="Talep" class="form-control" required placeholder="Talebinizi yazın..." />
            </div>

            <div class="form-group text-center mb-4">
                <button type="submit" class="btn btn-success w-100">Talep Gönder</button>
            </div>
        </form>
    </div>
</div>
