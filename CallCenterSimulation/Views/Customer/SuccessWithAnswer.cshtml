@{
    ViewData["Title"] = "Temsilci Cevabı";
    var ad = TempData["Ad"]?.ToString();
    var cevap = TempData["TemsilciCevabi"]?.ToString();
    TempData.Keep("Ad");
    TempData.Keep("TemsilciCevabi");
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 bg-light p-4">
        <div class="card-body text-center">
            <div class="mb-4">
                <i class="fas fa-comment-dots fa-3x text-info"></i>
            </div>

            <h4 class="text-primary mb-4">
                Sayın <strong>@ad</strong>, temsilcimizin cevabı aşağıdadır:
            </h4>

            <div class="alert alert-success py-4">
                <blockquote class="blockquote mb-0">
                    <p class="mb-0 fs-5">@cevap</p>
                </blockquote>
            </div>

            <form asp-action="Feedback" method="get" class="mt-4">
                <input type="hidden" name="ad" value="@ad" />
                <button type="submit" class="btn btn-outline-success btn-lg">
                    <i class="fas fa-smile me-2"></i>Memnuniyet Anketini Doldur
                </button>
            </form>
        </div>
    </div>
</div>
