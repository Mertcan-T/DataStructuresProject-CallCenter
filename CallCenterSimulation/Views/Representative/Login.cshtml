@model dynamic

@{
    ViewData["Title"] = "Temsilci Girişi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg p-5 border-0 rounded-4">
                <div class="text-center mb-4">
                    <div class="icon-wrapper mb-3 mx-auto">
                        <i class="fas fa-lock fa-3x text-primary"></i>
                    </div>
                    <h2 class="fw-bold text-primary mb-2">Temsilci Girişi</h2>
                    <p class="text-secondary mb-0">Yetkili personel girişi için bilgilerinizi girin.</p>
                </div>
                <form asp-action="Login" method="post">
                    <div class="form-group mb-4">
                        <label for="kullaniciAdi" class="form-label text-primary fw-semibold">Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="fas fa-user-tie"></i></span>
                            <input type="text" name="kullaniciAdi" class="form-control border-start-0" required placeholder="Kullanıcı adınızı girin" />
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <label for="sifre" class="form-label text-primary fw-semibold">Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="fas fa-key"></i></span>
                            <input type="password" name="sifre" class="form-control border-start-0" required placeholder="Şifrenizi girin" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-3 fw-bold fs-5">
                        <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                    </button>
                    @if (ViewBag.Hata != null)
                    {
                        <div class="alert alert-danger text-center mt-3">
                            @ViewBag.Hata
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
