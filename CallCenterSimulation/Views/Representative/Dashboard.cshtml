@model CallCenterSimulation.Models.DashboardViewModel

@{
    ViewData["Title"] = "Temsilci Paneli";
}

<h2>Bekleyen Müşteriler</h2>

@if (!Model.BekleyenMusteriler.Any())
{
    <p>Bekleyen müşteri yok.</p>
}
else
{
    <table class="table" id="musteriTable">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Talep</th>
                <th>Sıra</th>
                <th>Yanıt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var musteri in Model.BekleyenMusteriler)
            {
                <tr>
                    <td>@musteri.Ad</td>
                    <td>@musteri.Talep</td>
                    <td>@musteri.SiraNumarasi</td>
                    <td>
                        <form asp-action="YanitGonder" method="post" style="display: flex; gap: 5px;">
                            <input type="hidden" name="id" value="@musteri.Id" />
                            <input type="text" name="yanitMesaji" placeholder="Yanıt yazın..." class="form-control" required />
                            <button type="submit" class="btn btn-success">Gönder</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h2 class="mt-5">Tamamlanan Müşteriler</h2>

@if (!Model.TamamlananMusteriler.Any())
{
    <p>Henüz tamamlanan müşteri yok.</p>
}
else
{
    <ul>
        @foreach (var log in Model.TamamlananMusteriler)
        {
            <li>@log.Ad</li>
        }
    </ul>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/callCenterHub")
            .build();

        connection.on("ReceiveRequest", function (ad, talep, siraNumarasi) {
            const table = document.getElementById("musteriTable").getElementsByTagName('tbody')[0];
            const newRow = table.insertRow();
            newRow.innerHTML = `<td>${ad}</td><td>${talep}</td><td>${siraNumarasi}</td><td></td>`;
        });

        connection.on("UpdateQueue", function () {
            location.reload();
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>
}
