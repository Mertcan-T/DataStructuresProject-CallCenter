@model IEnumerable<CallCenterSimulation.Models.Customer>

@{
    ViewData["Title"] = "Temsilci Paneli";
}

<h2>Temsilci Paneli</h2>

@if (!Model.Any())
{
    <p>Bekleyen müşteri yok.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Talep</th>
                <th>Sıra Numarası</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var musteri in Model)
            {
                <tr>
                    <td>@musteri.Ad</td>
                    <td>@musteri.Talep</td>
                    <td>@musteri.SiraNumarasi</td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="ServeCustomer" method="post">
        <button type="submit" class="btn btn-danger">Sıradaki Müşteriyi Çağır</button>
    </form>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/callCenterHub")
            .build();

        connection.on("ReceiveRequest", function (ad, talep) {
            alert("Yeni müşteri talebi geldi: " + ad + " - " + talep);
            location.reload(); // Sayfayı yenile
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>
}
