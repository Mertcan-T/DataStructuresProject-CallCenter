@model List<CallCenterSimulation.Models.CustomerFeedback>

@{
    ViewData["Title"] = "Geri Bildirimler";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">💬 Müşteri Geri Bildirimleri</h2>
        <a href="/Representative/Dashboard" class="btn btn-outline-secondary">🔙 Panele Dön</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Henüz geri bildirim yapılmamış.</div>
    }
    else
    {
        <div class="list-group">
            @foreach (var feedback in Model)
            {
                <div class="list-group-item mb-2">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0 text-success">@feedback.Ad</h5>
                        <span class="badge bg-success">Puan: @feedback.Puan</span>
                    </div>
                    <p class="mb-0">@feedback.GeriBildirim</p>
                </div>
            }
        </div>
    }
</div>
